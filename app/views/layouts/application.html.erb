<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class "nav-brand text-light" href="/">Bookers</a>
      <ul class="navbar-nav ml-auto">
       <li class="nav-item"><%= link_to "Home", user_path(current_user.id),class:"fas fa-home nav-link text-light" %></li>
       <li class="nav-item"><%= link_to "Users", users_path,class:"fas fa-users nav-link text-light" %></li>
       <li class="nav-item"><%= link_to "Books", books_path,class:"fas fa-book-open nav-link text-light" %></li>
       <li class="nav-item"><%= link_to "Log out", destroy_user_session_path,method: :delete,class:"fas fa-sign-out-alt nav-link text-light" %></li>
      </ul>
    </div>
  </nav>
  <% else %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
       <a class "nav-brand text-light" href="/">Bookers</a>
       <ul class="navbar-nav ml-auto">
        <li class="nav-item"><%= link_to "Home", root_path,class:"fas fa-home nav-link text-light" %></li>
        <li class="nav-item"><%= link_to "About", home_about_path,class:"fas fa-link nav-link text-light" %></li>
        <li class="nav-item"><%= link_to "Sign up", new_user_registration_path,class:"fas fa-user-plus nav-link text-ligh" %></li>
        <li class="nav-item"><%= link_to "Log in", new_user_session_path,class:"fas fa-sign-in-alt nav-link text-ligh" %></li>
       </ul>
      </div>
    </nav>
  <% end %>
  <% flash.each do |key, value| %>
  <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
  <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
    	    <div class="mx-auto">
    		    <p>CopyRight Infratop.inc</p>
    	    </div>
        </div>
      </div>
    </footer>
  </body>
</html>