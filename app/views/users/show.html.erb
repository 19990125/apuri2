<main>
   <p id="notice"></p>
   <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
      <table class="table">
<tbody>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
	  <th></th>
  </tr>
</tbody>
</table>
<div class="row">
  <%=link_to edit_user_path(@user.id),class: "btn btn-outline-secondary w-100" do%>
  <i class="fas fa-user-cog" ></i>
  <% end %>
</div>
<%= render 'users/list', book: @book %>
     </div>
   <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
   <table class='table table-hover table-inverse'>
    <thead>
     <tr>
     <th class="col-md-2"></th>
     <th class="col-md-2">Title</th>
     <th class="col-md-4">Opinion</th>
     </tr>
    </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
             <td><%= link_to user_path(@user.id) do %>
             <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
             <% end%>
             <td><%= link_to book.title, book_path(book.id) %></td>
             <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
   </table>
</div>
</div>
</div>
</div>
</main>