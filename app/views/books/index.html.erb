<main>
<% if @book.errors.any? %>
<%= @book.errors.count %>件のエラーが発生しました
<% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>
 <p id="notice"></p>
<div class="container px-5 px-sm-0">

  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :image, fallback: "no_image.jpg" %><table class="table">
  <tbody>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.body %></th>
  </tr>
</tbody>
</table>

<div class="row">
 <%=link_to edit_user_path(current_user.id),class: "btn btn-outline-secondary w-100" do%>
 <i class="fas fa-user-cog" > </i>
  <%end%>
</div>
     <%= render 'books/list', book: @book %>
  </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
        <td><%= link_to book.title, book%></td>
        <td><%= book.opinion %></td>
    </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>
</main>