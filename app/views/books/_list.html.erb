<h2 class="mt-3">New book</h2>
     <%= form_with model: book, local:true do |f| %>
     <%= f.label :Title %>
     <%= f.text_field:title,class:'form-control' %>
     <%= f.label :Opinion %>
     <%= f.text_field:body,class:'form-control' %>
     <%= f.submit 'Create Book',class:"btn btn-sm btn-success" %>
     <%end%>